<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LearnX.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LearnX</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav d-flex align-items-center">
                        @using Microsoft.AspNetCore.Http
                        @if (Context.Session.GetString("UserSession") != null)
                        {
                            <li class="nav-item me-2">
                                <a asp-action="Profile" class="btn btn-secondary btn-sm rounded-pill px-4 shadow-sm fw-bold d-flex align-items-center">
                                    <!-- Profile Icon -->
                                    <i class="bi bi-person-circle me-2"></i>
                                    @Context.Session.GetString("UserName")
                                </a>
                            </li>

                            <li class="nav-item me-2">
                                <a asp-action="Cart" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm fw-600 position-relative">
                                    <i class="bi bi-cart"></i> Cart
                                    <!-- Badge Circle -->
                                @using Microsoft.AspNetCore.Http
                                @using System.Text.Json
                                    @{
                                        // 1. Get the string from Session
                                        var cartJson = Context.Session.GetString("Cart");

                                        // 2. Deserialize to your List of CartItems
                                        var cartItems = string.IsNullOrEmpty(cartJson)
                                        ? new List<LearnX.Models.CartItem>()
                                        : JsonSerializer.Deserialize<List<LearnX.Models.CartItem>>(cartJson);

                                        // 3. Get the count
                                        var cartCount = cartItems.Count;
                                    }
                                    @if (cartCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light">
                                            @cartCount
                                            <span class="visually-hidden">items in cart</span>
                                        </span>
                                    }
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-danger btn-sm rounded-pill px-4 shadow-sm fw-600 d-flex align-items-center"
                                   asp-controller="Home"
                                   asp-action="Logout">

                                    <!-- Logout Icon -->
                                    <i class="bi bi-box-arrow-right me-2"></i>
                                    Logout
                                </a>
                            </li>

                            
                            
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - LearnX - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
