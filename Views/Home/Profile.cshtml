@model LearnX.Models.Student

@{
    var message1 = TempData["ProfileUpdate"];
}

@if (message1 != null)
{
    <div class="alert alert-success d-flex align-items-lg-stretch alert-dismissible fade show" role="alert">
        <svg xmlns="www.w3.org" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </svg>
        <div>
            @message1
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@{
    var message2 = TempData["PasswordUpdate"];
}

@if (message2 != null)
{
    <div class="alert alert-success d-flex align-items-lg-stretch alert-dismissible fade show" role="alert">
        <svg xmlns="www.w3.org" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </svg>
        <div>
            @message2
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@{
    var message3 = TempData["PasswordUnmatched"];
}

@if (message3 != null)
{
    <div class="alert alert-danger d-flex align-items-lg-stretch alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-1"></i>
        <div>
            @message3
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid py-4 rounded-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <!-- Left Sidebar Navigation -->
            <div class="col-lg-3">
                <div class="card border-0 shadow-sm rounded-5 overflow-hidden sticky-top" style="top: 2rem;">
                    <div class="bg-primary p-4 text-center text-white">
                        <div class="position-relative d-inline-block">
                            <i class="bi bi-person-circle display-1"></i>
                            <button class="btn btn-sm btn-light rounded-circle position-absolute bottom-0 end-0 shadow-sm" title="Change Avatar">
                                <i class="bi bi-camera"></i>
                            </button>
                        </div>
                        <h5 class="fw-bold mt-3 mb-0">@Model.StudentName</h5>
                        <p class="small opacity-75">Student ID: #@Model.StudentName.GetHashCode().ToString("X")</p>
                    </div>
                    <div class="list-group list-group-flush p-2">
                        <a href="#personal-info" class="list-group-item list-group-item-action border-0 rounded-4 active" data-bs-toggle="list">
                            <i class="bi bi-person-vcard me-2"></i> Personal Details
                        </a>
                        <a href="#security" class="list-group-item list-group-item-action border-0 rounded-4 mt-1" data-bs-toggle="list">
                            <i class="bi bi-shield-lock me-2"></i> Password & Security
                        </a>
                        <a asp-action="Logout" class="list-group-item list-group-item-action border-0 rounded-4 text-danger mt-2">
                            <i class="bi bi-box-arrow-right me-2"></i> Sign Out
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Content Area -->
            <div class="col-lg-9">
                <div class="tab-content">

                    <!-- Tab 1: Personal Info & Edit -->
                    <div class="tab-pane fade show active" id="personal-info">
                        <div class="card border-0 shadow-sm rounded-5 p-4 p-md-5 mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h4 class="fw-bold mb-0">Edit Profile</h4>
                                <span class="badge bg-success-subtle text-success px-3 py-2 rounded-pill">
                                    <i class="bi bi-patch-check-fill me-1"></i> Verified Account
                                </span>
                            </div>

                            <form asp-action="UpdateProfile" method="post">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold text-muted">Full Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-0"><i class="bi bi-person"></i></span>
                                            <input asp-for="StudentName" type="text" class="form-control bg-light border-0" placeholder="Enter Name">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold text-muted">Email Address</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-0"><i class="bi bi-envelope"></i></span>
                                            <input asp-for="StudentEmail" type="email" class="form-control bg-light border-0" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold text-muted">Phone Number</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-0"><i class="bi bi-telephone"></i></span>
                                            <input asp-for="StudentPhone" type="text" class="form-control bg-light border-0" placeholder="Phone">
                                        </div>
                                    </div>
                                    <div class="col-12 mt-5">
                                        <button type="submit" class="btn btn-dark rounded-pill px-5 shadow hover-lift">Save Changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Tab 2: Security & Password -->
                    <div class="tab-pane fade" id="security">
                        <div class="card border-0 shadow-sm rounded-5 p-4 p-md-5">
                            <h4 class="fw-bold mb-4">Update Password</h4>
                            <form asp-action="UpdatePassword" method="post">
                                <div class="mb-4">
                                    <label class="form-label small fw-bold text-muted">Current Password</label>
                                    <input name="currentPassword" type="password" class="form-control bg-light border-0 py-2">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label small fw-bold text-muted">New Password</label>
                                    <input name="newPassword" type="password" class="form-control bg-light border-0 py-2">
                                </div>
                                <div class="mb-5">
                                    <label class="form-label small fw-bold text-muted">Confirm New Password</label>
                                    <input name="confirmPassword" type="password" class="form-control bg-light border-0 py-2">
                                </div>
                                <input type="hidden" name="studentName" value="@Model.StudentName"/>
                                <button type="submit" class="btn btn-dark rounded-pill px-5 shadow hover-lift">Update</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm w-100 mt-3 rounded-pill py-3 shadow fw-bold">
            <i class="bi bi-arrow-left me-2"></i> Back to courses
        </a>
    </div>
</div>
